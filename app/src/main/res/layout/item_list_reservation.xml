<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/default_margin"
    android:layout_marginRight="@dimen/default_margin"
    android:background="?android:selectableItemBackground"
    card_view:cardCornerRadius="@dimen/BaseLayout_rhythmThird"
    card_view:cardElevation="@dimen/BaseLayout_rhythmSixth">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/restaurantName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/BaseLayout_rhythmThird"
            android:layout_marginTop="@dimen/BaseLayout_rhythmThird"
            android:layout_marginEnd="@dimen/BaseLayout_rhythmThird"
            android:maxLines="2"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintVertical_bias="0.0"
            tools:text="X2 Pan Asian Dining" />

        <TextView
            android:id="@+id/cuisine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/BaseLayout_rhythmThird"
            android:layout_marginTop="@dimen/BaseLayout_rhythmTwelfth"
            android:layout_marginEnd="@dimen/BaseLayout_rhythmThird"
            android:maxLines="2"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="12sp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/restaurantName"
            card_view:layout_constraintVertical_bias="0.0"
            tools:text="ASIAN FUSION RESTAURANT" />

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/BaseLayout_rhythmTwelfth"
            android:drawableStart="@drawable/ic_location_icon"
            android:drawablePadding="@dimen/BaseLayout_rhythmSixth"
            android:maxLines="2"
            android:paddingStart="@dimen/BaseLayout_rhythmThird"
            android:paddingEnd="@dimen/BaseLayout_rhythmThird"
            android:textSize="12sp"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/cuisine"
            tools:text="102-C2, Gulberg lll, Lahore" />

        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:drawableStart="@drawable/ic_phone"
            android:drawablePadding="@dimen/BaseLayout_rhythmSixth"
            android:textSize="12sp"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/address"
            tools:text="042 111 3535 555" />

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/BaseLayout_rhythmOneAndAThird"
            android:layout_marginTop="@dimen/BaseLayout_rhythmThird"
            android:layout_marginEnd="@dimen/BaseLayout_rhythmOneAndAThird"
            android:background="@color/color_gray_light"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/phone" />

        <TextView
            android:id="@+id/offer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/BaseLayout_rhythmThird"
            android:layout_marginTop="@dimen/BaseLayout_rhythmThird"
            android:layout_marginEnd="@dimen/BaseLayout_rhythmThird"
            android:textColor="@color/color_black"
            android:textSize="18sp"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@id/view1"
            tools:text="Buy 1 get 1 Free" />


        <TextView
            android:id="@+id/offerTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/BaseLayout_rhythmThird"
            android:layout_marginTop="@dimen/BaseLayout_rhythmTwelfth"
            android:layout_marginEnd="@dimen/BaseLayout_rhythmThird"
            android:textColor="@color/colorAccent"
            android:textSize="12sp"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.495"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/offer"
            tools:text="Today 7pm - 11pm" />

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/BaseLayout_rhythmOneAndAThird"
            android:layout_marginTop="@dimen/BaseLayout_rhythmThird"
            android:layout_marginEnd="@dimen/BaseLayout_rhythmOneAndAThird"
            android:background="@color/color_text_gray"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/offerTime" />

        <TextView
            android:id="@+id/noOfGuests"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:drawableLeft="@drawable/ic_people_icon"
            android:drawablePadding="@dimen/BaseLayout_rhythmSixth"
            android:textColor="@color/color_black"
            android:textStyle="bold"
            card_view:layout_constraintEnd_toStartOf="@+id/arrivalTime"
            card_view:layout_constraintHorizontal_bias="0.5"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/view2"
            tools:text="06 Persons" />

        <TextView
            android:id="@+id/arrivalTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:drawableLeft="@drawable/ic_time_icon"
            android:drawablePadding="@dimen/BaseLayout_rhythmSixth"
            android:textColor="@color/color_black"
            android:textStyle="bold"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.5"
            card_view:layout_constraintStart_toEndOf="@+id/noOfGuests"
            card_view:layout_constraintTop_toBottomOf="@+id/view2"
            tools:text="7:00pm - 7:30pm" />

        <TextView
            android:id="@+id/reservationType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/BaseLayout_rhythmThird"
            android:layout_marginTop="@dimen/BaseLayout_rhythmHalf"
            android:layout_marginEnd="@dimen/BaseLayout_rhythmThird"
            android:minHeight="@dimen/progressbar_size"
            android:minWidth="@dimen/BaseLayout_rhythmOneAndTwoThirds"
            android:background="@drawable/button_disable_background"
            android:foregroundGravity="center_horizontal"
            android:gravity="center"
            android:includeFontPadding="false"
            android:textAlignment="center"
            android:textColor="@color/color_white"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/arrivalTime"
            tools:text="Take away" />

        <Button
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/BaseLayout_rhythmThird"
            android:background="@drawable/button_background_white"
            android:minWidth="130dp"
            android:minHeight="32dp"
            android:text="Cancel"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.Text.Roboto_Medium"
            android:textColor="@color/colorAccent"
            android:textSize="10sp"
            android:elevation="@dimen/default_margin"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/reservationType" />

        <ImageButton
            android:id="@+id/share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/BaseLayout_rhythmThird"
            android:layout_marginEnd="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_share"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.813"
            card_view:layout_constraintStart_toEndOf="@+id/cancel"
            card_view:layout_constraintTop_toBottomOf="@+id/reservationType" />

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/BaseLayout_rhythmThird"
            android:background="#faf7fb"
            android:foregroundGravity="center_horizontal"
            android:gravity="center"
            android:padding="@dimen/default_padding"
            android:text="TextView"
            android:textSize="12sp"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.0"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/cancel" />

        <TextView
            android:id="@+id/reservationCode"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/color_red"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/color_white"
            android:textSize="16sp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/description"
            tools:text="Confirmation Code: 2A502" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
