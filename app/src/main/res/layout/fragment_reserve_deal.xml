<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground">

    <TextView
        android:id="@+id/restaurantName"
        style="@style/TextAppearance.Text.Roboto_Medium.XXLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/BaseLayout_rhythmTwoThirds"
        android:gravity="center_horizontal"
        android:textColor="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="X2 Dining" />

    <TextView
        android:id="@+id/arrivalTimeTitle"
        style="@style/TextAppearance.Text.Roboto_Medium.Black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/BaseLayout_rhythmFourth"
        android:gravity="center_horizontal"
        android:minWidth="@dimen/BaseLayout_rhythmThree"
        android:text="@string/arrival_time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/numberOfGuestsTitle"
        app:layout_constraintTop_toBottomOf="@+id/restaurantName" />

    <TextView
        android:id="@+id/arrivalTime"
        style="@style/TextAppearance.Text.Roboto_Medium.Black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_narrow"
        android:background="@drawable/background_round_corner_border"
        android:gravity="center"
        android:minWidth="@dimen/BaseLayout_rhythmThree"
        android:minHeight="@dimen/reserve_deal_details_min_height"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/numberOfGuests"
        app:layout_constraintTop_toBottomOf="@+id/arrivalTimeTitle"
        tools:text="7:00pm - 7:30pm" />

    <TextView
        android:id="@+id/numberOfGuestsTitle"
        style="@style/TextAppearance.Text.Roboto_Medium.Black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/BaseLayout_rhythmFourth"
        android:gravity="center_horizontal"
        android:minWidth="@dimen/BaseLayout_rhythmThree"
        android:text="@string/guests"
        app:layout_constraintEnd_toStartOf="@+id/arrivalTimeTitle"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/restaurantName" />

    <TextView
        android:id="@+id/numberOfGuests"
        style="@style/TextAppearance.Text.Roboto_Medium.Black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_narrow"
        android:background="@drawable/background_round_corner_border"
        android:gravity="center"
        android:minWidth="@dimen/BaseLayout_rhythmThree"
        android:minHeight="@dimen/reserve_deal_details_min_height"
        app:layout_constraintEnd_toStartOf="@+id/arrivalTime"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numberOfGuestsTitle"
        tools:text="06 Persons" />

    <Button
        android:id="@+id/reserveButton"
        style="@style/Button.Action.Primary"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/BaseLayout_rhythmTwoThirds"
        android:layout_marginTop="@dimen/BaseLayout_rhythmHalf"
        android:layout_marginBottom="@dimen/BaseLayout_rhythmTwoThirds"
        android:minWidth="@dimen/BaseLayout_rhythmThree"
        android:text="@string/hint_confirm"
        android:textAppearance="@style/TextAppearance.Text.Small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/arrivalTime" />

</androidx.constraintlayout.widget.ConstraintLayout>
