<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="@dimen/_140sdp"
    android:layout_height="@dimen/_180sdp"
    android:layout_marginBottom="@dimen/_8sdp"
    android:layout_marginLeft="@dimen/_8sdp"
    android:layout_marginRight="@dimen/_6sdp"
    android:background="?android:selectableItemBackground"
    card_view:cardCornerRadius="@dimen/card_corner_radius"
    card_view:cardElevation="@dimen/BaseLayout_rhythmSixth">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/restaurantCoverImageFeatureDeal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_item_deal_thumbnail_height_new"
            android:background="@color/color_gray"
            android:scaleType="centerCrop"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/deal_placeholder" />


        <RatingBar
            android:id="@+id/dealRatingFeatureDeal"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="@dimen/rating_bar_width_deals"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/BaseLayout_rhythmThird"
            android:background="@drawable/background_round_corner_narrow"
            android:numStars="5"
            android:padding="@dimen/margin_narrow"
            android:scaleX="1.1"
            android:scaleY="1.1"
            card_view:layout_constraintBottom_toTopOf="@+id/restaurantNameFeatureDeal"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            tools:rating="3" />

        <TextView
            android:id="@+id/restaurantNameFeatureDeal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/BaseLayout_rhythmThird"
            android:layout_marginEnd="@dimen/BaseLayout_rhythmThird"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/default_margin"
            android:maxLines="1"
            android:maxWidth="@dimen/_15sdp"
            android:paddingLeft="@dimen/default_padding"
            card_view:layout_constraintHorizontal_bias="0.0"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@id/restaurantCoverImageFeatureDeal"
            card_view:layout_constraintEnd_toEndOf="parent"
            tools:text="X2 Cafe" />

        <TextView
            android:id="@+id/restaurantAddressFeatureDeal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_location_pin"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:drawablePadding="@dimen/BaseLayout_rhythmSixth"
            android:maxLines="1"
            android:maxWidth="@dimen/_15sdp"
            android:paddingLeft="@dimen/default_padding"
            card_view:layout_constraintHorizontal_bias="0.0"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@id/restaurantNameFeatureDeal"
            card_view:layout_constraintEnd_toEndOf="parent"
            tools:text="Gulberg|Lahore" />

        <TextView
            android:id="@+id/restaurantCuisinesFeatureDeal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/list_item_padding_left_cuisines_new"
            android:layout_marginEnd="@dimen/list_item_padding_left_cuisines_new"
            android:maxLines="2"
            android:textAlignment="center"
            android:paddingBottom="@dimen/BaseLayout_rhythmFourth"
            card_view:layout_constraintEnd_toEndOf="parent"
            android:maxWidth="@dimen/_15sdp"
            card_view:layout_constraintHorizontal_bias="0.0"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@id/restaurantAddressFeatureDeal"
            tools:text="Thai, Chinese, Desi, Italian" />

        <TextView
            android:id="@+id/dealOfferFeatureDeal"
            style="@style/list_item_deal_offer_text_New"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_package"
            android:drawablePadding="@dimen/BaseLayout_rhythmSixth"
            android:layout_marginTop="@dimen/_8sdp"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            tools:text=" 50 % off " />

        <TextView
            android:id="@+id/dealTimeFeatureDeal"
            style="@style/list_item_deal_offer_text_New2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/BaseLayout_rhythmSixth"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@id/dealOfferFeatureDeal"
            card_view:layout_constraintEnd_toEndOf="parent"
            tools:text="11:30:30"
            android:layout_marginTop="@dimen/_23sdp"/>




    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
