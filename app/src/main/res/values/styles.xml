    <style name="TextView_default_padding_style">
        <item name="android:paddingLeft">@dimen/BaseLayout_rhythmFourth</item>
        <item name="android:paddingRight">@dimen/BaseLayout_rhythmFourth</item>
        <item name="android:paddingTop">@dimen/BaseLayout_rhythmTwelfth</item>
