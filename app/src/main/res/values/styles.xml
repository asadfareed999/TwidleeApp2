        <item name="android:fontFamily">@font/font_josefinsans_regular</item>
    </style>

    <style name="customfontstyle_roboto_meduim" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/font_roboto_medium</item>
    </style>

    <style name="customfontstyle_roboto_bold" parent="TextAppearance.AppCompat">

    </style>

    <style name="customstyle_code_authentication" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/font_roboto_regular</item>
        <item name="android:textSize">20dp</item>
        <item name="android:color">@color/color_black</item>
        <item name="android:padding">@dimen/default_padding</item>
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:inputType">number</item>
        <item name="android:textStyle">normal</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:layout_marginLeft">@dimen/BaseLayout_rhythmFourth</item>
        <item name="android:layout_marginRight">@dimen/BaseLayout_rhythmFourth</item>
    </style>

    <style name="list_item_deal_offer_text" parent="TextView_default_padding_style">
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/background_round_corner_narrow</item>
        <item name="android:layout_marginStart">@dimen/BaseLayout_rhythmThird</item>
        <item name="android:layout_marginTop">@dimen/default_margin</item>
        <item name="android:paddingLeft">@dimen/BaseLayout_rhythmSixth</item>
        <item name="android:fontFamily">@font/font_roboto_bold</item>
    </style>

    <style name="BaseLayout.BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:colorBackground">@color/color_white</item>
    </style>

    <style name="CustomRateBarFeedBack" parent="Widget.AppCompat.RatingBar.Indicator">
        <item name="android:layout_gravity">center</item>
        <item name="android:isIndicator">false</item>
        <item name="android:numStars">5</item>
        <item name="android:scaleX">.5</item>
        <item name="android:scaleY">.5</item>
    </style>

    <style name="CustomRateBarStyleRateFeedBack" parent="Widget.AppCompat.RatingBar.Indicator">
        <item name="android:layout_marginLeft">@dimen/_35sdp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:isIndicator">false</item>
        <item name="android:numStars">5</item>
        <item name="android:stepSize">1</item>
        <item name="android:scaleX">.6</item>
        <item name="android:scaleY">.6</item>
    </style>

    <style name="TextAppearance.Text.XXLargeRedBold">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomProgressBarStyle" parent="Base.Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/background_round_corner_progressbar</item>
        <item name="android:layout_width">@dimen/rating_item_progressbar_width</item>
        <item name="android:layout_height">@dimen/rating_item_progressbar_height</item>
        <item name="android:max">50</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="CustomRatingBarStyle" parent="Base.Widget.AppCompat.RatingBar.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:numStars">5</item>
    </style>

    <style name="History_Status">
        <item name="android:textSize">12dp</item>
        <item name="android:color">@color/color_black</item>
        <item name="android:fontFamily">@font/font_roboto_bold</item>
    </style>

    <style name="Tab_Style" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">@font/font_roboto_bold</item>
